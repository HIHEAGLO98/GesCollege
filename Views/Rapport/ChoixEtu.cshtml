@model GesCollege.Models.Etudiant

@{
    ViewBag.Title = "ChoixEtu";
@*    Layout = "~/Views/Shared/_Layout.cshtml";
*@}

<h2>ChoixEtu</h2>

@using (Html.BeginForm("FicheEtu","Rapport",FormMethod.Get))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Note</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Id, "IdEtudiant", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdEtudiant" , null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Fiche", "FicheEtu", new { id=2 });
                @*<a href="FicheEtu/IdEtudiant.SelectedValue">
                    <input type="submit" value="Fiche" class="btn btn-default" />
                </a>*@
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Rapport", "Index")
</div>